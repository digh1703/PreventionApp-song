<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/activity_board_list_Title"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="제목"
        android:textSize="15dp"/>
    <TextView
        android:id="@+id/activity_board_list_contents"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:paddingTop="2dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="글내용글내용글내용글내용글내용글내용글내용글내용글내용글내용글내용글내용"
        android:textSize="12dp"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/activity_board_list_date"
            android:layout_width="50dp"
            android:layout_height="12dp"
            android:layout_marginLeft="12dp"
            android:text="20/05/10"
            android:textSize="10dp"/>
        <TextView
            android:id="@+id/activity_board_list_writer"
            android:layout_width="60dp"
            android:layout_height="12dp"
            android:layout_marginLeft="9dp"
            android:text="아이디"
            android:textSize="10dp"/>
        <View
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="205dp"
            android:layout_marginRight="5dp"
            android:background="@color/colorPrimary"
            />
        <TextView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="5dp"
            android:background="@color/colorPrimary"
            android:text="좋아요"
            />
        <View
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="5dp"
            android:background="@color/colorPrimary"
            />
        <TextView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="12dp"
            android:background="@color/colorPrimary"
            android:text="덧글수"
            />

    </LinearLayout>

    <View
        android:layout_width="400dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:background="#989898"/>

</LinearLayout>